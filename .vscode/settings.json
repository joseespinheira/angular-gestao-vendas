{
  // Formatação automática ao salvar
  "editor.formatOnSave": true,

  // Configuração do Prettier como formatador padrão
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Configuração de indentação
  "editor.tabSize": 2,
  "editor.insertSpaces": true,

  // Organizar automaticamente os imports ao salvar
  "editor.codeActionsOnSave": {
    "source.organizeImports": "always"
  },

  // Suporte ao Angular
  "files.associations": {
    "*.component.html": "html",
    "*.component.ts": "typescript"
  },

  // Excluir arquivos/diretórios desnecessários do explorador
  "files.exclude": {
    "node_modules": true,
    "dist": true
  },

  // Configuração para o TypeScript
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.updateImportsOnFileMove.enabled": "always"
}
